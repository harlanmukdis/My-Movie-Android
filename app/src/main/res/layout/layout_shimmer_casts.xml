                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="@color/gray"
                        android:background="@color/gray"
                        android:layout_alignLeft="@+id/profile3"
                        android:layout_alignRight="@+id/profile3"
                        android:layout_alignTop="@+id/profile3"
                        android:layout_alignBottom="@+id/profile3" />

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile3"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@color/gray"
                        android:text="character"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/character3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name3"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_alignStart="@+id/name3"
                        android:textColor="@color/gray"
                        android:background="@color/gray"
                        android:text="character"
                        android:textSize="10sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item4"
                android:layout_width="85dp"
                android:layout_height="200dp"
                android:elevation="3dp"
                android:layout_marginStart="@dimen/_8sdp"
                card_view:cardCornerRadius="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/profile4"
